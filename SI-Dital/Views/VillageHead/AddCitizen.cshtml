@model SI_Dital.ViewModels.AddCitizen
@{
    ViewBag.Title = "AddCitizen";
    Layout = "~/Views/Shared/_LayoutVillageHead.cshtml";

}

<div class="row page-titles">
    <div class="col-md-6 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Penduduk</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Penduduk")">Penduduk</a></li>
            <li class="breadcrumb-item active">Tambah Data Penduduk</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Daftar Penduduk</h4>
                <h6 class="card-subtitle">Untuk menambahkan Penduduk silahkan isi form berikut</h6>
                @using (Html.BeginForm("AddCitizen", "VillageHead", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-horizontal">
                        <div class="row" style="margin-bottom: 10px;">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.NIK, htmlAttributes: new { @class = "control-label g-color-gray-dark-v5" })
                                @Html.EditorFor(model => model.NIK, new { htmlAttributes = new { @class = "form-control", placeholder = "NIK" } })
                                @Html.ValidationMessageFor(model => model.NIK, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "control-label g-color-gray-dark-v5" })
                                @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", placeholder = "Nama Lengkap" } })
                                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 10px;">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label g-color-gray-dark-v5" })
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 10px;">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label g-color-gray-dark-v5" })
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label g-color-gray-dark-v5" })
                                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Confirm Password" } })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 10px;">
                            <div class="col-md-6">
                                <label class="control-label g-color-gray-dark-v5 ">RT</label>
                                @Html.DropDownList("RT", (IEnumerable<SelectListItem>)ViewBag.RT, "Pilih RT", new
                                {
                                    @class = "form-control",
                                    id = "RT",
                                    style = "width:100%"
                                })
                            </div>
                            <div class="col-md-6">
                                <label class="control-label g-color-gray-dark-v5 ">RW</label>
                                @Html.DropDownList("RW", (IEnumerable<SelectListItem>)ViewBag.RW, "Pilih RW", new
                                {
                                    @class = "form-control",
                                    id = "RW",
                                    style = "width:100%"
                                })
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 10px;">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label g-color-gray-dark-v5" })
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Alamat Lengkap, Nomor Rumah..." } })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 10px;">
                            <div class="col-md-6">
                                <label class="control-label g-font-size-16 g-color-gray-dark-v2">Tanggal Lahir<span class="g-color-red">*</span></label>
                                <div class="input-group date" id="DOB" data-target-input="nearest">
                                    <input type="text" placeholder="dd/mm/yyyy" data-target="#DOB" data-toggle="datetimepicker" data-mask="99/99/9999" class="form-control datetimepicker-input" name="DOB" required="required" data-val="true" data-val-required="Tanggal lahir wajib diisi">
                                    <div class="input-group-addon btn-primary" data-target="#DOB" data-toggle="datetimepicker"><i class="fa fa-calendar"></i></div>
                                </div>
                                @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label g-color-gray-dark-v5" })
                                <select class="form-control" name="Gender" id="Gender" required>
                                    <option hidden value="">Jenis Kelamin</option>
                                    <option value="true">Laki-Laki</option>
                                    <option value="false">Perempuan</option>
                                </select>
                                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 10px;">
                            <div class="col-md-6">
                                <label class="control-label g-color-gray-dark-v5 ">Pekerjaan</label>
                                @Html.DropDownList("Job", (IEnumerable<SelectListItem>)ViewBag.Jobs, "Pilih Pekerjaan", new
                                {
                                    @class = "form-control",
                                    id = "Job",
                                    placeholder = "Pilih Pekerjaan",
                                    style = "width:100%"
                                })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Institution, htmlAttributes: new { @class = "control-label g-color-gray-dark-v5" })
                                @Html.EditorFor(model => model.Institution, new { htmlAttributes = new { @class = "form-control", placeholder = "Institusi" } })
                                @Html.ValidationMessageFor(model => model.Institution, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 10px;">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label g-color-gray-dark-v5" })
                                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "No Telepon" } })
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Descriptions, htmlAttributes: new { @class = "control-label g-color-gray-dark-v5" })
                                @Html.EditorFor(model => model.Descriptions, new { htmlAttributes = new { @class = "form-control", placeholder = "Deskripsi" } })
                                @Html.ValidationMessageFor(model => model.Descriptions, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 10px;">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.MaritalStatus, htmlAttributes: new { @class = "control-label g-color-gray-dark-v5" })
                                <select class="form-control" name="MaritalStatus" id="MaritalStatus" required>
                                    <option hidden value="">Status Pernikahan</option>
                                    <option value="true">Sudah Menikah</option>
                                    <option value="false">Belum Menikah</option>
                                </select>
                                @Html.ValidationMessageFor(model => model.MaritalStatus, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Religion, htmlAttributes: new { @class = "control-label" })
                                @Html.EnumDropDownListFor(model => model.Religion, "Select Status", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Religion, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 10px;">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Citizenship, htmlAttributes: new { @class = "control-label g-color-gray-dark-v5" })
                                @Html.EditorFor(model => model.Citizenship, new { htmlAttributes = new { @class = "form-control", placeholder = "Kewarganegaraan" } })
                                @Html.ValidationMessageFor(model => model.Citizenship, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Roles, htmlAttributes: new { @class = "control-label g-color-gray-dark-v5" })
                                @Html.EnumDropDownListFor(model => model.Roles, "Select Status", new { @class = "form-control", placeholder = "Jabatan Di Desa" })
                                @Html.ValidationMessageFor(model => model.Roles, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Simpan</button>
                            @Html.ActionLink("Batal", "Citizen", null, new { @class = "btn btn-inverse" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section styles
{
    <link href="~/assets/vendor/sweetalert/sweetalert.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/vendor/dropzone-master/dist/dropzone.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/assets/css/unify-core.css">
    <link rel="stylesheet" href="~/assets/css/unify-components.css">
    <link rel="stylesheet" href="~/assets/css/unify-globals.css">
    <link rel="stylesheet" href="~/assets/css/styles.op-event.css">
    <!-- CSS Customization -->
    <link rel="stylesheet" href="~/assets/css/custom.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/css/tempusdominus-bootstrap-4.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />

}
@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-chained/1.0.1/jquery.chained.min.js"></script>
    <script src="~/assets/vendor/sweetalert/sweetalert.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/assets/js/components/hs.masked-input.js"></script>
    <script>
        $(document).on('ready', function () {
            $.HSCore.components.HSMaskedInput.init('[data-mask]');
        });
    </script>
    <script>
        $(function () {
            $('#DOB').datetimepicker({
                format: 'DD/MM/YYYY'
            });
        });
    </script>
}


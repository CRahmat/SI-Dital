@model SI_Dital.ViewModels.AddDocumentType

@{
    ViewBag.Title = "AddDocumentType";
    Layout = "~/Views/Shared/_LayoutVillageHead.cshtml";

}

<div class="row page-titles">
    <div class="col-md-6 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Jenis Dokumen</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("DocumentType")">Jenis Dokumen</a></li>
            <li class="breadcrumb-item active">Tambah Jenis Dokumen</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Daftar Jenis Dokumen</h4>
                <h6 class="card-subtitle">Untuk menambahkan Jenis Dokumen silahkan isi form berikut</h6>
                @using (Html.BeginForm("AddDocumentType", "VillageHead", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.IdDocumentType, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.IdDocumentType, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IdDocumentType, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label class="control-label g-color-gray-dark-v5 ">Dokumen</label>
                        @Html.DropDownList("FileDocument", (IEnumerable<SelectListItem>)ViewBag.FileDocuments, "Pilih File", new
                        {
                            @class = "form-control",
                            id = "FileDocument",
                            style = "width:100%"
                        })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Simpan</button>
                        @Html.ActionLink("Batal", "DocumentType", null, new { @class = "btn btn-inverse" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@model SI_Dital.Models.DocumentGroup

@{
    ViewBag.Title = "DetailDocument";
    Layout = "~/Views/Shared/_LayoutVillageHead.cshtml";
}
<div class="row page-titles">
    <div class="col-md-6 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Kelola Jenis Dokumen</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("DocumentType")">Jenis Dokumen</a></li>
            <li class="breadcrumb-item active">Detail Jenis Dokumen</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form class="form" id="verification">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Permalink)
                </form>

                <div class="sl-item">
                    <div class="sl-right">
                        <div>
                            <strong>Nama Jenis Dokumen</strong>
                            <blockquote class="m-t-5 text-muted">
                                @Model.Title
                            </blockquote>
                        </div>
                    </div>
                </div>

                <div class="sl-item">
                    <div class="sl-right">
                        <div>
                            <strong>No Urut</strong>
                            <blockquote class="m-t-5 text-muted">
                                @Model.Order
                            </blockquote>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-offset-2 col-md-10 ">
                        @Html.ActionLink("Hapus", "DeleteDocumentType", new { id = Model.Permalink }, new { @class = "btn btn-danger" })
                        @Html.ActionLink("Kembali", "DocumentType", null, new { @class = "btn btn-inverse" })
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>






@model IEnumerable<SI_Dital.Models.DocumentGroup>
@{
    ViewBag.Title = "DocumentType";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row page-titles">
    <div class="col-md-6 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Jenis Dokumen</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("DocumentType")">Jenis Dokumen</a></li>
            <li class="breadcrumb-item active">Daftar Jenis Dokumen</li>
        </ol>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <p>Untuk Menambahkan Jenis Dokumen Tekan Tombol Dibawah Ini</p>
        <p><a class="btn btn-info" href="@Url.Action("AddDocumentType")">Tambah Jenis Dokumen</a></p>
    </div>
    </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive m-t-40">
                    <table id="myTable" class="table table-bordered table-striped">
                        <thead class="table-header">
                            <tr>
                                <th>ID</th>
                                <th>Nama</th>
                                <th>Dibuat Oleh</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Permalink</td>
                                    <td>@item.Title</td>
                                    <td>@item.CreatedBy.FullName</td>
                                    <td>
                                        <a href="@Url.Action("EditDocumentType", new { id = @item.Permalink })" target="_blank" data-toggle="tooltip" data-original-title="Edit">
                                            <i class="fa fa-edit m-1"></i>
                                        </a>
                                        <a href="@Url.Action("DetailDocumentType", new { id = @item.Permalink })" target="_blank" data-toggle="tooltip" data-original-title="Lihat Detail">
                                            <i class="fa fa-align-justify m-1"></i>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @section Scripts{
            <script src="~/assets/vendor/datatables/jquery.dataTables.min.js"></script>
            <script>
                $(document).ready(function () {
                    $('#myTable').DataTable({
                        dom: 'Bfrtip',
                        buttons: [
                            'copy', 'csv', 'excel', 'pdf', 'print'
                        ]
                    });
                });

            </script>
        }


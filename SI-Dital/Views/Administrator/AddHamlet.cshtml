@model SI_Dital.ViewModels.AddHamlet

@{
    ViewBag.Title = "AddHamlet";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<div class="row page-titles">
    <div class="col-md-6 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Pedukuhan</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Hamlet")">Pedukuhan</a></li>
            <li class="breadcrumb-item active">Tambah Data Pedukuhan</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Daftar Pedukuhan</h4>
                <h6 class="card-subtitle">Untuk menambahkan Pedukuhan silahkan isi form berikut</h6>
                @using (Html.BeginForm("AddHamlet", "Administrator", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.IdHamlet, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.IdHamlet, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IdHamlet, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Chairman, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Chairman, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Chairman, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Simpan</button>
                        @Html.ActionLink("Batal", "Hamlet", null, new { @class = "btn btn-inverse" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>


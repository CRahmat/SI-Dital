@model IEnumerable<SI_Dital.Models.Hamlet>
@{
    ViewBag.Title = "Hamlet";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row page-titles">
    <div class="col-md-6 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Pedukuhan</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Hamlet")">RT</a></li>
            <li class="breadcrumb-item active">Daftar Pedukuhan</li>
        </ol>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <p>Untuk Menambahkan Pedukuhan Tekan Tombol Dibawah Ini</p>
        <p><a class="btn btn-info" href="@Url.Action("AddHamlet")">Tambah Pedukuhan</a></p>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="table-responsive m-t-40">
            <table id="myTable" class="table table-bordered table-striped">
                <thead class="table-header">
                    <tr>
                        <th>ID</th>
                        <th>Nama</th>
                        <th>Nama Dukuh</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdHamlet</td>
                            <td>@item.Name</td>
                            <td>@item.Chairman</td>
                            <td>
                                <a href="@Url.Action("EditHamlet", new { id = @item.IdHamlet })" target="_blank" data-toggle="tooltip" data-original-title="Edit">
                                    <i class="fa fa-edit m-1"></i>
                                </a>
                                <a href="@Url.Action("DetailHamlet", new { id = @item.IdHamlet })" target="_blank" data-toggle="tooltip" data-original-title="Lihat Detail">
                                    <i class="fa fa-align-justify m-1"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/assets/vendor/datatables/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        });

    </script>
}


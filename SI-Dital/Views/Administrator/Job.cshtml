@model IEnumerable<SI_Dital.Models.Job>
@{
    ViewBag.Title = "Job";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row page-titles">
    <div class="col-md-6 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Job</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Job")">Job</a></li>
            <li class="breadcrumb-item active">Daftar Job</li>
        </ol>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <p>Untuk Menambahkan Job Tekan Tombol Dibawah Ini</p>
        <p><a class="btn btn-info" href="@Url.Action("AddJob")">Tambah Job</a></p>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="table-responsive m-t-40">
            <table id="myTable" class="table table-bordered table-striped">
                <thead class="table-header">
                    <tr>
                        <th>ID</th>
                        <th>Nama</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdJob</td>
                            <td>@item.Title</td>
                            <td>
                                <a href="@Url.Action("EditJob", new { id = @item.IdJob })" target="_blank" data-toggle="tooltip" data-original-title="Edit">
                                    <i class="fa fa-edit m-1"></i>
                                </a>
                                <a href="@Url.Action("DetailJob", new { id = @item.IdJob })" target="_blank" data-toggle="tooltip" data-original-title="Lihat Detail">
                                    <i class="fa fa-align-justify m-1"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/assets/vendor/datatables/jquery.dataTables.min.js"></script>
    <script>
            $(document).ready(function () {
                $('#myTable').DataTable({
                    dom: 'Bfrtip',
                    buttons: [
                        'copy', 'csv', 'excel', 'pdf', 'print'
                    ]
                });
            });

    </script>
}


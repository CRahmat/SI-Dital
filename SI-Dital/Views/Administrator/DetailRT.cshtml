@model SI_Dital.Models.RT

@{
    ViewBag.Title = "DetailRT";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row page-titles">
    <div class="col-md-6 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Kelola RT</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("RT")">RT</a></li>
            <li class="breadcrumb-item active">Detail RT</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form class="form" id="verification">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.IdRT)
                </form>

                <div class="sl-item">
                    <div class="sl-right">
                        <div>
                            <strong>Nama RT</strong>
                            <blockquote class="m-t-5 text-muted">
                                @Model.Name
                            </blockquote>
                        </div>
                    </div>
                </div>

                <div class="sl-item">
                    <div class="sl-right">
                        <div>
                            <strong>Ketua RT</strong>
                            <blockquote class="m-t-5 text-muted">
                                @Model.Chairman
                            </blockquote>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-offset-2 col-md-10 ">
                        @Html.ActionLink("Hapus", "DeleteRT", new { id = Model.IdRT }, new { @class = "btn btn-danger" })
                        @Html.ActionLink("Kembali", "RT", null, new { @class = "btn btn-inverse" })
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



